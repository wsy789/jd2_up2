<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="15dp"
    tools:context=".ui.main.MainActivity">
<ImageView
    android:id="@+id/comment_img"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@mipmap/ic_launcher_round"
    android:layout_width="60dp"
    android:layout_height="60dp"/>

<TextView
    android:id="@+id/comment_username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="55555555"
    android:textColor="@color/back"
    android:layout_marginLeft="20dp"
    app:layout_constraintLeft_toRightOf="@+id/comment_img"
android:layout_marginTop="3dp"
    app:layout_constraintTop_toTopOf="@+id/comment_img"/>

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55555555"
        android:textColor="@color/subtitle"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/comment_img"
        app:layout_constraintLeft_toRightOf="@+id/comment_img"/>
    <TextView
        android:id="@+id/comment_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/subtitle"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/comment_img"
        app:layout_constraintRight_toLeftOf="@+id/comment_like_img"/>
    <ImageView
        android:id="@+id/comment_like_img"
        android:src="@drawable/detail_like_select_drawable"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/comment_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11111111111111111"
        android:textColor="@color/back"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/comment_img"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_img"/>
    <com.wsy.jd2.widget.CommentsView
        android:id="@+id/comment_return_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/comment_text"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/comment_time"
        />
</androidx.constraintlayout.widget.ConstraintLayout>